<!DOCTYPE html>
<html>
<head>
  <meta charset="utf-8">
  <title>Get Back To Work, Jen!</title>
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <style type="text/css">
    body {
      background: black;
      color: white;
      display: grid;
      font-family: sans-serif;
      grid-template-rows: 48px 1fr 48px;
      height: 100vh;
      justify-content: center;
      margin: 0;
      overflow: hidden;
      width: 100vw;
      font-size: 16px;
    }
    button {
      all: unset;
      background: #add8e6;
      border-radius: 12px 12px 0 0;
      color: black;
      cursor: pointer;
      font-family: sans-serif;
      font-size: 28px;
      line-height: 42px;
      margin: 3px 0;
      padding: 0 4rem;
      text-align: center;
    }
    button:hover {
      background: #6fb5cc;
    }
    video {
      display: none;
      max-width: 100vw;
      max-height: calc(100vh - 48px - 48px);
    }
    .show {
      display: block;
    }
    footer {
      text-align: center;
    }
  </style>
</head>
<body>
  <button>Loading... please wait...</button>

  <main>
  <% (videos = Dir.glob('source/jen-videos/*.mp4').map{|f| f.gsub(/^source\//, '') }).each do |video| %>
    <video width="1280" height="720"><source src="<%= video %>" type="video/mp4"></video>
  <% end %>
  </main>

  <footer>
    Your tolerance for being shouted at: <span id="score">0</span>%.
  </footer>

  <script type="text/javascript">
    const videos = document.querySelectorAll('video');
    const button = document.querySelector('button');
    const score = document.getElementById('score');
    let seenVideos = [];

    button.addEventListener('click', function(){
      videos.forEach(video=>{ video.classList.remove('show'); video.pause(); video.currentTime = 0; });
      const videoId = Math.floor(Math.random() * <%= videos.length %>);
      const video = videos[videoId];
      if(!seenVideos.includes(videoId)) seenVideos.push(videoId);
      score.innerText = Math.round(seenVideos.length / <%= videos.length %> * 100);
      button.innerText = 'Shout at me again!';
      video.classList.add('show');
      video.play();
    });

    button.innerText = 'Shout at me!';
  </script>
</body>
</html>